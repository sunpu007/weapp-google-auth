.container {
  padding: 0 40rpx;
}

.item {
  padding: 30rpx 0;
  border-bottom: 1px solid #ccc;
}

.item-title {
  font-weight: 500;
}

.item-code {
  font-size: 50rpx;
  color: blue;
}

.item-time {
  float: right;
  /* width: 50rpx;
  height: 50rpx;
  background-color: blue;
  border-radius: 50rpx; */
}

.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 50%;
  box-shadow: 2rpx 2rpx 10rpx rgba(0, 0, 0, 0.5);
  background: #fff;
}

.add-btn-image {
  width: 40rpx;
  height: 40rpx;
  margin: 25rpx auto;
  transition: .3s linear;
}

.add-btn-image.actvie {
  width: 35rpx;
  height: 35rpx;
  margin-top: 27.5rpx;
  transform: rotate(45deg);
}

.add-model {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.8);
}

.add-item-container {
  position: fixed;
  right: 50rpx;
  bottom: 150rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  text-align: right;
  animation: show-add .3s linear forwards;
  opacity: 0;
}

@keyframes show-add {
  form {
    opacity: 0;
    bottom: 150rpx;
  }
  to {
    opacity: 1;
    bottom: 170rpx;
  }
}

.add-item-container > view {
  margin-top: 40rpx;
}

.add-item-container text {
  display: inline-block;
  background-color: #fff;
  line-height: 70rpx;
  padding: 0 20rpx;
  border-radius: 10rpx;
  box-shadow: 3rpx 3rpx 5rpx rgba(0, 0, 0, 0.3);
}

.add-item-icon {
  /* display: inline-block; */
  width: 70rpx;
  height: 70rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 2rpx 2rpx 10rpx rgba(0, 0, 0, 0.5);
  margin-left: 30rpx;
  float: right;
}

.add-item-icon image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 15rpx;
}

.model {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.model-delete > view, .model-edit > view {
  margin-bottom: 20rpx;
}

.model-edit {
  position: fixed;
  left: 50%;
  top: 50%;
  width: 70%;
  border-radius: 10rpx;
  padding: 40rpx 40rpx 20rpx;
  transform: translateX(-50%) translateY(-50%);
  background-color: #FFF;
  font-size: 30rpx;
  color: #666;
}

.model-edit-title {
  text-align: center;
  font-size: 34rpx;
  font-size: #333;
}

.model-edit-input {
  margin: 10rpx auto 40rpx !important;
}

.model-edit-input input {
  border-bottom: 1rpx solid #666;
  font-size: 36rpx;
  height: 60rpx;
  color: #000;
}

.model-edit-btn {
  text-align: right;
  color: blue;
}
.model-edit-btn text {
  margin-left: 80rpx;
}

.model-delete {
  position: fixed;
  left: 50%;
  top: 50%;
  width: 70%;
  border-radius: 10rpx;
  padding: 40rpx 40rpx 20rpx;
  transform: translateX(-50%) translateY(-50%);
  background-color: #FFF;
  font-size: 30rpx;
  color: #666;
}

.model-delete-icon {
  text-align: center;
  margin-bottom: 0rpx;
}

.model-delete-icon image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: -20rpx;
}

.model-delete-title {
  text-align: center;
  font-size: 34rpx;
}

.model-delete-btn {
  text-align: right;
  color: blue;
}
.model-delete-btn text {
  margin-left: 80rpx;
}

.model-strong {
  font-weight: 700;
}